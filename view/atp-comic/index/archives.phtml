<?php $this->appendCss("/css/atp-comic/comic.less")?>

<div id="archives">
    <h1>
        <?php if(count($arcs) == 1) {?>
            <?=$arcs[0]->displayName()?>
        <?php } ?>
        Archives
    </h1>

    <?php foreach($arcs as $arc) { ?>
        <img class="arc-banner" src="<?=$this->basePath($arc->filePath('banner_file'))?>" title="<?=$arc->displayName()?>"/>
        <p class="arc-summary"><?=$arc->summaryHtml?></p>
        <?php if($this->siteParam("comic-show-archive-breadcrumbs")) {?>
            <ol class="breadcrumb">
                <li><a href="<?=$this->url("comic/archives")?>">Archives</a></li>
                <?php if(count($arc->parentArcs()) > 0) {?>
                    <?php foreach($arc->parentArcs() as $parentArc) { ?>
                        <li>
                            <a href="<?=$this->url("comic/archives", array('arc' => $parentArc->url))?>">
                                <?=$parentArc->displayName()?>
                            </a>
                        </li>
                    <?php } ?>
                <?php } ?>
                <li>
                    <a class="active" href="<?=$this->url("comic/archives", array('arc' => $arc->url))?>">
                        <?=$arc->displayName()?>
                    </a>
                </li>
            </ol>
        <?php } ?>



		<?php if(count($arc->getSubArcs()) == 0) { ?>
            <?=$this->render('atp-comic/shared/archive-page-links.phtml', array('arc' => $arc))?>
		<?php } else { ?>
			<ul class="sub-arcs">
				<?php foreach($arc->getSubArcs() as $index => $subArc) { ?>
					<li>
                        <img class="subarc-thumbnail" src="<?=$this->basePath($subArc->filePath('thumbnail_file'))?>" title="<?=$subArc->displayName()?>"/>
                        <div class="subarc-info">
                            <h3>
                                <?=$arc->subArcName?> <?=$index + 1?> - <?=$subArc->name?>
                            </h3>
                            <p><?=$subArc->summaryHtml?></p>
                            <?php if(count($subArc->getSubArcs()) > 1) { ?>
                                <div class="browse-by-subarc">
                                    <a href="<?=$this->url("comic/archives", array('arc' => $subArc->url))?>">
                                        browse by <?=strtolower($subArc->subArcName)?>
                                    </a>
                                </div>
                            <?php } ?>
                        </div>
                        <?=$this->render('atp-comic/shared/archive-page-links.phtml', array('arc' => $subArc))?>
					</li>
				<?php } ?>
			</ul>
		<?php } ?>
	<?php } ?>
	
	<div style="clear: both;"></div>
</div>